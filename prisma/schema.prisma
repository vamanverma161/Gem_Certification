generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model GemCertification {
  id                String   @id @default(cuid())
  certificateNumber String   @unique
  gemName           String
  gemType           String
  carat             String
  color             String
  shape             String?
  cut               String?
  origin            String?
  treatment         String?
  remarks           String?
  status            String   @default("Certified")
  issueDate         DateTime
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model Admin {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}